{
    "manifest_version": 2,
    "name": "Budget Manager",
    "version": "1.0",
    "description": "Tracks overall spendings.",
    "icons": {
        "128": "icon128.png",
        "28": "icon48.png",
        "16": "icon16.png"
    },    
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background":{
        "scripts": ["eventsPage.js"],
        "persistent": false
    },
    "permissions": [
        "storage",
        "notifications",
        "contextMenu"
    ],
    "web_accessible_resources": [
        "icon48.png"
      ]
}